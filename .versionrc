header: |
  # changelog
types:
- type: feat
  increment: Minor
  section: new features
  hidden: false
- type: fix
  increment: Patch
  section: bug fixes
  hidden: false
- type: build
  increment: None
  section: build system
  hidden: true
- type: chore
  increment: None
  section: other
  hidden: true
- type: ci
  increment: None
  section: ci/cd
  hidden: true
- type: docs
  increment: None
  section: docs
  hidden: true
- type: style
  increment: None
  section: style changes
  hidden: true
- type: refactor
  increment: None
  section: refactoring
  hidden: true
- type: perf
  increment: None
  section: performance
  hidden: false
- type: test
  increment: None
  section: tests
  hidden: true
preMajor: false
commitUrlFormat: '{{@root.host}}/{{@root.owner}}/{{@root.repository}}/commit/{{hash}}'
compareUrlFormat: '{{@root.host}}/{{@root.owner}}/{{@root.repository}}/compare/{{previousTag}}...{{currentTag}}'
issueUrlFormat: '{{@root.host}}/{{@root.owner}}/{{@root.repository}}/issues/{{issue}}'
userUrlFormat: '{{host}}/{{user}}'
releaseCommitMessageFormat: 'chore(release): {{currentTag}}'
issuePrefixes:
- '#'
host: https://git.musicaloft.com
owner: municorn
repository: munibot
template: null
commitTemplate: null
scopeRegex: ^[[:alnum:]]+(?:[-_/][[:alnum:]]+)*$
lineLength: 80
wrapDisabled: false
linkCompare: true
linkReferences: true
merges: false
firstParent: false
stripRegex: ''
description:
  length:
    min: 10
    max: null
